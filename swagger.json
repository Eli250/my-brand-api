          {
            "name": "Authorization",
            "in": "header",
            "description": "Authorization",
            "required": true
          },
          {
            "name": "id",
            "in": "path",
            "description": "Artticle Id",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      },
      "patch": {
        "tags": ["Queries"],
        "summary": "Update Query",
        "description": "Update Query",
        "operationId": "patchQuery",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Artticle ID",
            "required": true
          },
          {
            "name": "Query",
            "in": "body",
            "description": "Query Update",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Queries"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      },
      "delete": {
        "tags": ["Queries"],
        "summary": "Delete Query",
        "description": "Delete One  Query",
        "operationId": "delQuery",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "description": "Authorization",
            "required": true
          },
          {
            "name": "id",
            "in": "path",
            "description": "Query Id",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
