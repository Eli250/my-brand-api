  "servers": [
    {
      "url": "http://develi-api.herokuapp.com/",
      "description": "Production Server"
    }
  ],
  "tags": [
    {
      "name": "Home",
      "description": "Entry Route"
    },
    {
      "name": "Users",
      "description": "Open end points for users"
    },
    {
      "name": "Articles",
      "description": "Article Operations"
    },
    {
      "name": "Queries",
      "description": "Queries Operations"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "tags": ["Home"],
        "summary": "Home",
        "description": "Home",
        "operationId": "getHome",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/v1/user/register": {
      "post": {
        "tags": ["Users"],
        "summary": "Register",
        "description": "Register User",
        "operationId": "postUsersRegister",
        "parameters": [
          {
            "in": "body",
            "name": "Register",
            "description": "User Register",
            "required": "true",
            "schema": {
              "$ref": "#/definitions/Register"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "409": {
            "description": "Conflicts / User Exists"
          }
        }
      }
    },
    "/api/v1/user/login": {
      "post": {
        "tags": ["Users"],
        "summary": "Login",
        "description": "Login",
        "operationId": "postUsersLogin",
        "parameters": [
          {
            "name": "Login",
            "in": "body",
            "description": "Login",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Login"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/v1/articles": {
      "post": {
        "tags": ["Articles"],
        "summary": "Create article item",
        "description": "Adds an article in the system.",
        "operationId": "postArticles",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "description": "Authorization",
            "required": true
          },
          {
            "name": "title",
            "in": "formData",
            "description": "title",
            "required": true
          },
          {
            "name": "content",
            "in": "formData",
            "description": "content",
            "required": true
          },
          {
            "name": "image",
            "in": "formData",
            "type": "file",
            "description": "image",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Bad request / Wrong Inputs"
          },
          "401": {
            "description": "Anauthorized / Require Login"
          }
        }
      },
      "get": {
        "tags": ["Articles"],
        "summary": "Get all articles",
        "description": "Get all articles",
        "operationId": "getArticles",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/v1/articles/{id}": {
      "get": {
        "tags": ["Articles"],
        "summary": "Get One Article",
        "description": "Get  Article By Id",
        "operationId": "getArticle",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Artticle Id",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "401": {
            "description": "Anauthorized / Require Login"
          }
        }
      },
      "patch": {
        "tags": ["Articles"],
        "summary": "Update Article",
        "description": "Update An Article",
        "operationId": "patchArticle",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "description": "Authorization",
            "required": true
          },
          {
            "name": "id",
            "in": "path",
            "description": "Artticle ID",
            "required": true
          },
          {
            "name": "Article",
            "in": "body",
            "description": "Article Update",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Article"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "404": {
            "description": "Not Found"
          },
          "401": {
            "description": "Anauthorized / Require Login"
          }
        }
      },
      "delete": {
        "tags": ["Articles"],
        "summary": "Delete Article",
        "description": "Delete One  Article",
        "operationId": "delArticle",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "description": "Authorization",
            "required": true
          },
          {
            "name": "id",
            "in": "path",
            "description": "Artticle Id",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/api/v1/articles/{id}/comments": {
      "post": {
        "tags": ["Articles"],
        "summary": "Add Comment",
        "description": "Comment on Article",
        "operationId": "addComment",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Artticle Id",
            "required": true
          },
          {
            "name": "Comment",
            "in": "body",
            "description": "Article Comment",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Comment"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "get": {
        "tags": ["Articles"],
        "summary": "Get Comments",
        "description": "Read Article Comments",
        "operationId": "getComment",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Artticle Id",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "404": {
            "description": "Article Not Found!"
          }
        }
      }
    },
    "/api/v1/queries": {
      "post": {
        "tags": ["Queries"],
        "summary": "Create Query",
        "description": "Sends query to the administrator.",
        "operationId": "postQuery",
        "parameters": [
          {
            "in": "body",
            "name": "Query",
            "description": "Add Query",
            "required": "true",
            "schema": {
              "$ref": "#/definitions/Queries"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      },
      "get": {
        "tags": ["Queries"],
        "summary": "Retrieve Queries",
        "description": "Retrieve all submitted queries",
        "operationId": "getQueries",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "description": "Authorization",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/v1/queries/{id}": {
      "get": {
        "tags": ["Queries"],
        "summary": "Get One Query",
        "description": "Get  Query By Id",
        "operationId": "getOneQury",
